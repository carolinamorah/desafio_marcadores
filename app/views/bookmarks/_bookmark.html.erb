<tr id="bookmark_<%= bookmark.id %>">
    <td><%= bookmark.name %></td>
    <td><%= bookmark.type.name %></td>
    <td><%= bookmark.category.name %></td>
    <td><%= bookmark.url %></td>
    <td><%= link_to 'Show', bookmark, id:"showButton", class: "btn btn-sm", remote: true %></td>
    <td><%= link_to 'Edit', edit_bookmark_path(bookmark), id:"editButton", class:"btn btn-primary btn-sm", remote: true %></td>
    <td><%= link_to bookmark, method: :delete, data: { confirm: 'Are you sure?' }, id:"deleteButton", class: "btn btn-danger btn-sm", remote: true do %>
        <i class="fas fa-trash-alt"></i>
    <% end %></td>
</tr>